{
  "name": "chatgpt",
  "version": "1.0.0",
  "description": "A ChatGPT bot for Telegram.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint:fix": "eslint \"{src,config,e2e}/**/*.ts\" --fix --cache --max-warnings 0",
    "lint": "eslint '{src,config}/**/*.ts' --max-warnings 0",
    "build:tsc": "tsc",
    "build:swc": "swc --out-dir dist src",
    "start": "node dist/app.js"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint",
      "prettier --check"
    ]
  },
  "keywords": [
    "ChatGPT",
    "Telegram",
    "Bot"
  ],
  "author": "Ivan Chulkov",
  "license": "MIT",
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/lodash": "^4.14.192",
    "@types/node-telegram-bot-api": "^0.57.7",
    "@types/promise-queue": "^2.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "tsc-watch": "^6.0.0",

    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.70",
    "@types/node": "18.14.2",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "prettier": "3.0.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "chatgpt": "^5.1.4",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "extensionless": "^1.3.4",
    "https-proxy-agent": "^5.0.1",
    "lmdb": "^2.7.11",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.1",
    "node-telegram-bot-api": "^0.60.0",
    "promise-queue": "^2.2.5",
    "telegramify-markdown": "^1.1.0"
  }
}
